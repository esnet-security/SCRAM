    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Debugger",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 3000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "Translator Debugger",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 3001
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/translator",
                    "remoteRoot": "/app"
                }
            ]
        }
    ]
}
